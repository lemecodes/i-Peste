<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewCapturedPhotoReport"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginTop="1dp" />

    <TextView
        android:id="@+id/textViewClassificationResultReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewCapturedPhotoReport"
        android:layout_marginTop="16dp"/>



    <!-- New TextViews for displaying registration data -->
    <TextView
        android:id="@+id/textViewNameReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewClassificationResultReport"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewAddressReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNameReport"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewAgeReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAddressReport"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewContactReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAgeReport"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewDateReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewContactReport"
        android:layout_marginTop="16dp"/>
</RelativeLayout>